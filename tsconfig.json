{
  "compilerOptions": {
    "module": "es2015",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "types" : [ "node", "mocha", "chai", "jest"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./**/*.spec.ts",
    "./test/**/*.ts"
  ]
}
